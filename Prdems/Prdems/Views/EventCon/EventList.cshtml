@model List<Prdems.Models.Entities.Event>


<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Event List</h2>
            <a asp-action="Event" class="btn btn-success btn-sm">+ Add Event</a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover table-responsive">
                <thead class="table-dark">
                    <tr>
                        <th>Event Name</th>
                        <th>Description</th>
                        <th>Location</th>
                        <th>Created Date</th>
                        <th>Category</th>
                        <th>Attendees</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eventItem in Model)
                    {
                        <tr>
                            <td>@eventItem.EventName</td>
                            <td>@eventItem.EventDescription</td>
                            <td>@eventItem.Location</td>
                            <td>@eventItem.CreatedDate.ToString("MMMM dd, yyyy")</td>
                            <td>@eventItem.Category</td>
                            <td>@eventItem.Attendee</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-controller="EventCon" asp-action="Delete" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@eventItem.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this event?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>