@model Prdems.Models.EventViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Event</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .event-form {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            margin: 50px auto;
            max-width: 600px;
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .submit-btn, .reset-btn {
            padding: 10px 20px;
            border-radius: 6px;
        }

        .submit-btn {
            background-color: #4CAF50;
            color: white;
        }

            .submit-btn:hover {
                background-color: #45a049;
            }

        .reset-btn {
            background-color: #dc3545;
            color: white;
        }

            .reset-btn:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="event-form">
            <h2 class="form-title">Create New Event</h2>
            <form asp-action="Event" method="post">
                <!-- Event Name -->
                <div class="mb-3">
                    <label asp-for="EventName" class="form-label"></label>
                    <input asp-for="EventName" class="form-control" required />
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="EventDescription" class="form-label"></label>
                    <textarea asp-for="EventDescription" class="form-control" required></textarea>
                </div>

                <!-- Location -->
                <div class="mb-3">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" required placeholder="e.g., New York, USA" />
                </div>

                <!-- Date -->
                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label"></label>
                    <input asp-for="CreatedDate" type="date" class="form-control" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <!-- Category -->
                <div class="mb-3">
                    <label asp-for="Category" class="form-label"></label>
                    <select asp-for="Category" class="form-select" required>
                        <option value="">Select Category</option>
                        <option value="conference">Conference</option>
                        <option value="workshop">Workshop</option>
                        <option value="seminar">Seminar</option>
                        <option value="social">Social Gathering</option>
                        <option value="sports">Sports Event</option>
                    </select>
                </div>

                <!-- Attendee Count -->
                <div class="mb-3">
                    <label asp-for="Attendee" class="form-label"></label>
                    <input asp-for="Attendee" type="number" class="form-control" min="1" max="10000" required />
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn submit-btn">Create Event</button>
                    <button type="reset" class="btn reset-btn">Reset Form</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>